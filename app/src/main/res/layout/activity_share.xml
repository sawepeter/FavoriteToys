<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sawepeter.favoritetoys.ShareActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_mar"
        android:paddingLeft="@dimen/activity_horizontal"
        android:paddingRight="@dimen/activity_hori"
        android:paddingTop="@dimen/activity_vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/share_example"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_num"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="20dp"/>

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_number_seek"
            android:progress="0"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_number_text"
            android:gravity="center_vertical|end"/>
        
        <RadioGroup
            android:layout_width="match_parent"
            android:id="@+id/group_place_type"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="@string/width"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="20dp"/>

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/share_line_width_seek"
            android:progress="0"/>
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/share_line_width_text"
        android:gravity="center_vertical|end"
        android:layout_height="wrap_content" />

    </LinearLayout>

    <com.nightonke.boommenu.BoomMenuButton
        android:layout_width="wrap_content"
        android:id="@+id/boom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp"
        app:boom_inActionBar="false"
        app:boom_button_color="@color/colorAccent"
        app:boom_button_pressed_color="@color/colorAccent"
        android:layout_height="wrap_content"/>

</RelativeLayout>
